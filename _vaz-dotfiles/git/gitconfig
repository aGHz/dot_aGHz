[user]
  name = Vaz
  email = allen.mat@gmail.com
[core]
  editor = vim
[push]
  default = current
[merge]
  tool = vimdiff
[alias]
  co = checkout
  st = status
  ci = commit
  br = branch
  unstage = reset HEAD --
  l = log --pretty=oneline --abbrev-commit
  gl = log --pretty=oneline --abbrev-commit --graph
  glog = log --graph
  fetchdiff = log -p HEAD..FETCH_HEAD --abbrev-commit
  in = whatchanged ..origin
  out = whatchanged origin..
  last = show HEAD --abbrev-commit
  todo = grep -n TODO
  xxx = grep -n XXX
[color]
  ui = auto
